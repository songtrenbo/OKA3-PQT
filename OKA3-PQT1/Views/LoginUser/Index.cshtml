@model OKA3_PQT1.Models.USER

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous" />


@using (Html.BeginForm("LoginAccount", "LoginUser"))
{
    @Html.AntiForgeryToken()
    <section class="container-fluid bg">
        <section class="row justify-content-center">
            <section class="col-12 col-sm-8 col-md-4 form-container">
                <form class="form-container">
                    <div class="form-group">
                        @Html.LabelFor(model => model.TaiKhoan)
                        @Html.TextBoxFor(model => model.TaiKhoan, new { @class = "form-control", style = "field-validation-error", @placeholder = "Enter your account" })
                        @Html.ValidationMessageFor(model => model.TaiKhoan)

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.MatKhau)
                        @Html.TextBoxFor(model => model.MatKhau, new { @class = "form-control", style = "field-validation-error", @placeholder = "Enter your password", @type = "password" })
                        @Html.ValidationMessageFor(model => model.MatKhau)
                        @if (ViewBag.ErrorInfo == null)
                        {
                            <p>@ViewBag.ErrorInfo</p>
                        }
                    </div>
                    <button type="submit" value="Login" class="btn btn-danger btn-block" style="padding: 10px;"><b>Login</b></button>
                    <hr>
                    <div class="form-group">
                        <p style="float: left;">Do not have an account? <a href="@Url.Action("RegisterUser", "LoginUser")" class="card-link">Register now</a></p>
                    </div>
                    <br>
                </form>
            </section>
        </section>
    </section>
}
<style>
    .bg {
    }

    .form-container {
        background: #fff;
        margin-top: 5%;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px 0px #000;
    }

    .field-validation-error {
        color: red;
    }
</style>

