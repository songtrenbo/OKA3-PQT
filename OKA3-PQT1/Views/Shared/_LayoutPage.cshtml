<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/StyleSheetMain.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

    <script src="~/Scripts/script.js"></script>
</head>
<body>
    <div class="">
        <div class="navbar">
            <div class="logo">
                @if (Session["Quyen"] == null)
                {
                    <a href="@Url.Action("Index","Home")"><img src="~/Images/download.jpg" width="125px"></a>

                }
                else if (Session["Quyen"].ToString() == "KH")
                {
                    <a href="@Url.Action("Index","Home")"><img src="~/Images/download.jpg" width="125px"></a>
                }
                else
                {
                    <a href="@Url.Action("Index","Admin")"><img src="~/Images/download.jpg" width="125px"></a>
                }
            </div>
            <nav>
                <ul>
                    @if (Session["Quyen"] == null)
                    {
                        <li><a href="@Url.Action("Index","Home")">Home</a></li>
                        <li><a href="@Url.Action("Index","Product")">Products</a></li>
                        <li><a href="@Url.Action("About","Home")">About</a></li>
                        <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
                        <li><a href="@Url.Action("Index","LoginUser")">Login</a></li>
                    }
                    else if (Session["Quyen"].ToString() == "KH")
                    {
                        <li><a href="@Url.Action("Index","Home")">Home</a></li>
                        <li><a href="@Url.Action("Index","Product")">Products</a></li>
                        <li><a href="@Url.Action("Index","Discount")">Discount</a></li>
                        <li><a href="@Url.Action("Profile","LoginUser",new { mauser= Session["MaUser"]})">@Session["TenUser"]</a></li>
                        <li><a href="@Url.Action("LogOutUser","LoginUser")">Logout</a></li>

                    }
                    else
                    {
                        <li><a href="@Url.Action("CouponsManagement","Admin")">Coupons management</a></li>
                        <li><a href="@Url.Action("ProductsManagement","Admin")">Products management</a></li>
                        <li><a href="@Url.Action("CustomerManagement","Admin")">Customer management</a></li>
                        <li><a href="@Url.Action("Report","Admin")">Day Report</a></li>
                        <li><a href="#" style="cursor:default">@Session["TenUser"]</a></li>
                        <li><a href="@Url.Action("LogOutUser","LoginUser")">Logout</a></li>
                    }
                </ul>
            </nav>
            @if (Session["Quyen"] == null)
            {
                <a href="@Url.Action("ShowCart","ShoppingCart")"><img src="~/Images/cart.png" width="30px" height="30px"></a>

            }
            else if (Session["Quyen"].ToString() == "KH")
            {
                <a href="@Url.Action("ShowCart","ShoppingCart")"><img src="~/Images/cart.png" width="30px" height="30px"></a>
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <!------ footer ----->
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="footer-col-1">
                    <h1>Fashion</h1>
                    <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>
                </div>
                <div class="footer-col-2">
                    <h3>Useful links</h3>
                    <ul>
                        <li><a>Coupons</a></li>
                        <li><a href="">Blog post</a></li>
                        <li><a href="">Return Policies</a></li>
                        <li><a href="">Join Affiliate</a></li>
                    </ul>
                </div>
                <div class="footer-col-3">
                    <h3>Follow Us</h3>
                    <ul>
                        <li><a href="https://www.facebook.com/">Facebook</a></li>
                        <li><a href="https://twitter.com/?lang=en">Twitter</a></li>
                        <li><a href="https://www.instagram.com/">Instagram</a></li>
                        <li><a href="https://www.youtube.com/">Youtube</a></li>
                    </ul>
                </div>
            </div>
            <hr>
            <p class="copyright">E-commerece | LTW-T6-1012</p>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>